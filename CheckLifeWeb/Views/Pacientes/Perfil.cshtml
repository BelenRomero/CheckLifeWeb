@model CheckLifeWeb.Models.Paciente

@{
    ViewData["Title"] = "Perfil";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/css/general.css">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </head>
    <body>
        <div class="container row">
            <div class="col-md-12 divTitulos">
                <h2>Perfil</h2>
            </div>
            <div class="col-md-3"></div>
            <div class="col-md-3 text-center">
                <img src="/img/Iconos/perfilPaciente.jpg" class="img-circle" alt="Bird" width="150" height="150">
            </div>

            <div class="col-md-6">
                <div class="login-screen">
                    <div>
                        <form asp-action="Modificar" asp-route-id="@Model.ID">

                            <dl class="row">

                                <dt class="col-sm-6">
                                    Nombre
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>

                                <dt class="col-sm-6">
                                    Apellido
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Apellido)
                                </dd>

                                <dt class="col-sm-6">
                                    DNI
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.DNI)
                                </dd>

                                <dt class="col-sm-6">
                                    Fecha de Nacimiento
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.FechaNacimiento.Date)
                                </dd>

                                <dt class="col-sm-6">
                                    Edad
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Edad)
                                </dd>

                                <dt class="col-sm-6">
                                    Nacionalidad
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Nacionalidad.Descripcion)
                                </dd>

                                <dt class="col-sm-6">
                                    Telefono
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Telefono)
                                </dd>

                                <dt class="col-sm-6">
                                    Email
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>

                                <dt class="col-sm-6">
                                    Medico de Cabecera
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.MedicoCabecera.Nombre) @Html.DisplayFor(model => model.MedicoCabecera.Apellido)
                                </dd>
                            </dl>

                            <div class="form-group">
                                <input type="submit"
                                       class="btn btn-primary btn-lg disabled"
                                       role="button"
                                       aria-disabled="true"
                                       value="Modificar" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-12 text-center">
                <a asp-action="Index">Volver</a>
            </div>
        </div>

    </body>
</html>
