@model CheckLifeWeb.Models.Paciente

@{
    ViewData["Title"] = "Perfil Paciente";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/css/general.css">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <title>Perfil</title>
    </head>
    <body>
        <div class="container ">
            <div class="bg-1 text-center">
                <img src="~/Img/Iconos/perfilPaciente.jpg" class="img-circle" alt="Bird" width="150" height="150">
                <div class="divTitulos">
                    <h2>Perfil</h2>
                </div>
            </div>
            <br />

            <div>
                <div class="login-screen">
                    <div>
                        <form method="post" asp-action="EditarPerfil" asp-route-id="@Model.ID">
                            <div class="form-group">
                                <label>Nombre</label>
                                @Html.DisplayFor(model => model.Nombre)
                            </div>

                            <div class="form-group">
                                <label>Apellido</label>
                                @Html.DisplayFor(model => model.Apellido)
                            </div>

                            <div class="form-group">
                                <label>DNI</label>
                                @Html.DisplayFor(model => model.DNI)
                            </div>

                            <div class="form-group">
                                <label>Fecha de Nacimiento</label>
                                @Html.DisplayFor(model => model.FechaNacimiento)
                            </div>

                            <div class="form-group">
                                <label>Edad</label>
                                @Html.DisplayFor(model => model.Edad)
                            </div>

                            <div class="form-group">
                                <label>Nacionalidad</label>
                                @Html.DisplayFor(model => model.Nacionalidad.Descripcion)

                            </div>
                            <div class="form-group">
                                <label>Telefono:</label>
                                @Html.DisplayFor(model => model.Telefono)
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                @Html.DisplayFor(model => model.Email)
                            </div>

                            <div class="form-group">
                                <input type="submit"
                                       class="btn btn-primary btn-lg disabled" role="button" aria-disabled="true"
                                       value="Modificar" />
                            </div>
                        </form>
                    </div>









                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DNI)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DNI)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellido)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Edad)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Edad)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FechaNacimiento)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaNacimiento)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nacionalidad)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nacionalidad.ID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Login)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Login.ID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.MedicoCabecera)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MedicoCabecera.Apellido)
                        </dd>
                    </dl>
                </div>



                    <div class="text-center">
                        <a asp-action="Index">Volver</a>
                    </div>
                </div>

            </div>

        </div>

        <script type="text/javascript" src="registroFunciones.js"></script>

    </body>
</html>
